{
	"extends": "stylelint-config-recommended-scss",
	"plugins": [
		"stylelint-scss"
	],
	"ignoreFiles": ["src/vendors/*.scss"],
	"rules": {
		"no-descending-specificity": null,
		"scss/comment-no-empty": null,
		"scss/at-extend-no-missing-placeholder": null,
		"property-no-unknown": [
			true,
			{
				"ignoreProperties": [
					"color-scheme"
				]
			}
		]
	}
}
